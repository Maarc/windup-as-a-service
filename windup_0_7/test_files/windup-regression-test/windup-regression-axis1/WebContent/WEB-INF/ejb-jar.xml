<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE ejb-jar PUBLIC
      "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN"
      "http://java.sun.com/dtd/ejb-jar_2_0.dtd">

<ejb-jar>
    <display-name>EJB samples for deploying into Axis</display-name>

    <enterprise-beans>
        <session>
            <description>Hello World bean</description>
            <ejb-name>SimpleBeanEJB</ejb-name>
            <local-home>samples.ejb.SimpleBeanHome</local-home>
            <local>samples.ejb.SimpleBean</local>
            <ejb-class>samples.ejb.SimpleBeanEJB</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>

        <session>
            <description>Stateless Bean with Remote Interfaces</description>
            <ejb-name>NiceThingsBeanEJB</ejb-name>
            <local-home>samples.ejb.NiceThingsBeanHome</local-home>
            <local>samples.ejb.NiceThingsBean</local>
            <ejb-class>samples.ejb.NiceThingsBeanEJB</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
    </enterprise-beans>
</ejb-jar>
    
