<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
		<artifactId>windup-regression-test</artifactId>
		<groupId>com.jboss.windup.test</groupId>
		<version>1.0-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>windup-regression-ear</artifactId>
	<packaging>ear</packaging>
	<name>ear</name>
	<description />
	<dependencies>
		<dependency>
			<groupId>com.jboss.windup.test</groupId>
			<artifactId>windup-regression-ejb1</artifactId>
			<type>ejb</type>
			<version>1.0-SNAPSHOT</version>
			<scope>provided</scope>			
		</dependency>
		<dependency>
			<groupId>com.jboss.windup.test</groupId>
			<artifactId>windup-regression-ejb2</artifactId>
			<type>ejb</type>
			<version>1.0-SNAPSHOT</version>
			<scope>provided</scope>			
		</dependency>	
		<dependency>
			<groupId>com.jboss.windup.test</groupId>
			<artifactId>windup-regression-ejb3</artifactId>
			<type>ejb</type>
			<version>1.0-SNAPSHOT</version>
			<scope>provided</scope>			
		</dependency>			
		<dependency>
			<groupId>com.jboss.windup.test</groupId>
			<artifactId>windup-regression-war</artifactId>
			<type>war</type>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.jboss.windup.test</groupId>
			<artifactId>windup-regression-jrun4</artifactId>
			<type>war</type>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>com.jboss.windup.test</groupId>
			<artifactId>windup-regression-axis2</artifactId>
			<type>ejb</type>
			<version>1.0-SNAPSHOT</version>
		</dependency>	
		<dependency>
			<groupId>com.jboss.windup.test</groupId>
			<artifactId>windup-regression-axis1</artifactId>
			<type>ejb</type>
			<version>1.0-SNAPSHOT</version>
		</dependency>			
	</dependencies>
	<pluginRepositories>
		<pluginRepository>
			<id>codehaus snapshot repository</id>
			<url>http://snapshots.repository.codehaus.org/</url>
			<releases>
				<enabled>true</enabled>
			</releases>
		</pluginRepository>
	</pluginRepositories>
	<build>
		<finalName>windup-regression-ear</finalName>
		<plugins>
			<plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-ear-plugin</artifactId>
        <version>2.7</version>
				<configuration>
					<modules>
						<ejbModule>
							<groupId>com.jboss.windup.test</groupId>
							<artifactId>windup-regression-ejb1</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>com.jboss.windup.test</groupId>
							<artifactId>windup-regression-ejb2</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>com.jboss.windup.test</groupId>
							<artifactId>windup-regression-ejb3</artifactId>
						</ejbModule>												
						<webModule>
							<groupId>com.jboss.windup.test</groupId>
							<artifactId>windup-regression-war</artifactId>
              				<contextRoot>/windup-test</contextRoot>
						</webModule>
						<ejbModule>
							<groupId>com.jboss.windup.test</groupId>
							<artifactId>windup-regression-axis2</artifactId>
						</ejbModule>		
						<ejbModule>
							<groupId>com.jboss.windup.test</groupId>
							<artifactId>windup-regression-axis1</artifactId>
						</ejbModule>										
					</modules>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>