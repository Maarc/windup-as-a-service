<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>bin</id>
    <formats>
        <format>dir</format>
    </formats>

    <!-- Adds dependencies to zip package under lib directory -->
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <fileSet>
            <directory>src/main/scripts</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>jboss-windup.sh</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/assembly/extensions</directory>
            <outputDirectory>rules/extensions/</outputDirectory>
            <includes>
                <include>*.xml</include>
            </includes>
        </fileSet>
        
        <fileSet>
            <directory>../windup-rules/src/main/resources</directory>
            <outputDirectory>rules/base/</outputDirectory>
            <includes>
                <include>*.xml</include>
                <include>**/*.xml</include>
            </includes>
        </fileSet>
        
        <fileSet>
            <directory>${project.build.directory}/assembly-temp</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>